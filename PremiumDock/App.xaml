<Application x:Class="PremiumDock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="1,1">
      <GradientStop Color="#FDFDFD" Offset="0" />
      <GradientStop Color="#F2F6FF" Offset="0.5" />
      <GradientStop Color="#EEF2FF" Offset="1" />
    </LinearGradientBrush>
  </Application.Resources>
</Application>
