<Window x:Class="PremiumDock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PremiumDock"
        Width="680"
        Height="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True"
        Loaded="OnLoaded"
        AllowDrop="True"
        DragEnter="OnDragEnter"
        DragLeave="OnDragLeave"
        Drop="OnDrop">
  <Border CornerRadius="28"
          Padding="18"
          Background="{StaticResource DockBackgroundBrush}"
          BorderBrush="#2B2F3F"
          BorderThickness="1"
          SnapsToDevicePixels="True">
    <Border.Effect>
      <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#4C5DFF" Opacity="0.35" />
    </Border.Effect>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="Premium Dock" FontSize="14" FontWeight="SemiBold" Foreground="White" />
        <TextBlock Text=" • перетягніть ярлики зі стола"
                   Margin="8,0,0,0"
                   Style="{StaticResource CaptionStyle}" />
      </StackPanel>

      <Border Grid.Row="1"
              Margin="0,12,0,0"
              CornerRadius="18"
              BorderBrush="#202432"
              BorderThickness="1"
              Background="#0F121A">
        <Border.Effect>
          <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#000000" Opacity="0.4" />
        </Border.Effect>
        <Grid>
          <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Button Click="OnLaunchClick"
                        Tag="{Binding}"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="8,8"
                        ToolTip="{Binding DisplayName}">
                  <Grid>
                    <Ellipse Width="52" Height="52" Fill="#1C2130" Stroke="#2D3347" StrokeThickness="1" />
                    <Image Width="28" Height="28" Source="{Binding Icon}" />
                  </Grid>
                </Button>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

          <Border x:Name="DropOverlay"
                  Opacity="0"
                  Background="#3D4BFF"
                  CornerRadius="16">
            <Border.Effect>
              <DropShadowEffect BlurRadius="16" ShadowDepth="0" Color="#8E9CFF" Opacity="0.6" />
            </Border.Effect>
            <TextBlock Text="Відпустіть мишку, щоб додати ярлик"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold" />
          </Border>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Window>
